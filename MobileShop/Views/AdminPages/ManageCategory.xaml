<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileShop.Views.AdminPages.ManageCategory"
             Title="ManageCategory">
    <VerticalStackLayout Padding="24">

        <Label Text="Manage Categories" HorizontalOptions="Center" FontSize="28" />
        
        <ListView ItemTapped="DataList_ItemTapped" x:Name="DataList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding CatName}" ImageSource="{Binding Image}" Detail="{Binding Details}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>