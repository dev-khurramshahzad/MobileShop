<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileShop.Views.AdminPages.EditCategory"
             Title="Add Category">
    <VerticalStackLayout Spacing="20" Padding="24">
        <Label Text="Edit Category" HorizontalOptions="Center" FontSize="28" />
        <Image x:Name="ImagePlaceholder" WidthRequest="100" HorizontalOptions="Center" Source="{Binding Image,TargetNullValue='camera_icon.png'}">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Image.GestureRecognizers>
        </Image>

        <Entry Text="{Binding CatName}" x:Name="txtCategoryName" Placeholder="Category Name"   />
        <Entry Text="{Binding Details}" x:Name="txtCategoryDescription" Placeholder="Category Description"   />

        <ActivityIndicator IsVisible="False" IsRunning="True" x:Name="IndProgress"/>
        <Button Text="Update Category"  x:Name="btnAddCat" Clicked="btnAddCat_Clicked"/>
        <Button Text="Go Back" BackgroundColor="BlueViolet" TextColor="White" x:Name="btnBack" Clicked="btnBack_Clicked"/>



    </VerticalStackLayout>
</ContentPage>